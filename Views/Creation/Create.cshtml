@using SkoBingo.ViewModels
@model CreationViewModel

@{
    ViewData["Title"] = "SkoBingo - Sentences";
}

@section Styles {
    <link href="~/css/creation/create.css" rel="stylesheet" />
    <link href="~/css/creation/index.css" rel="stylesheet" />
    <link href="~/css/home/home.css" rel="stylesheet" />
}

    <div class="main-div">
        <form asp-controller="Creation" asp-action="BingoCreate" method="post">
            <label asp-for="Name"></label>
            <input asp-for="Name" required value="@Model.Name" readonly />
            <input asp-for="Size" hidden />

            <label asp-for="Sentences"></label>
            <div class="sentences-container">
                @{
                for (int i = 0; i < Model.Size * Model.Size; i++)
                {
                    <input asp-for="Sentences[i].Text" required />
                }
            }
        </div>


        <button class="button button-small" onclick="clearSelectedButtons()">Create bingo</button>

        <div asp-validation-summary="All" class="validation-span validationSummary"></div>
    </form>
</div>

